<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class="w-full max-w-md px-6 py-4 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800 mt-12 mb-12">
        <h2 class="text-3xl font-semibold text-center text-gray-800 dark:text-white">Se connecter</h2>
        <p class="mt-3 text-center text-gray-600 dark:text-gray-400 mb-8">Connectez-vous pour accéder à votre tableau de board</p>
       
        
        
      <form novalidate="" action="" class="space-y-12 ng-untouched ng-pristine ng-valid">
        <div class="space-y-4">
          <div>
            <%= f.label "Email", :class=>"block mb-2 text-sm"%>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"votremail@exemple.com", class:"w-full px-3 py-2 border rounded-md border-coolGray-300 bg-coolGray-50 text-coolGray-800" %>
          </div>
          <div>
            <div class="flex justify-between mb-2">
            <%= f.label "Mot de passe", class:"text-sm" %>
             
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"*****", class:"w-full px-3 py-2 border rounded-md border-coolGray-300 bg-coolGray-50 text-coolGray-800" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field flex flex-inline">
              <%= f.check_box :remember_me, class:"rounded" %>
              <%= f.label "Se souvenir de moi", class:"ml-2" %>
            </div>
          <% end %>
        </div>
        <div class="space-y-2">
          <div class="actions flex items-center justify-center mt-6 mb-4">
            <%= f.submit "Se connecter", class:"px-4 py-2 text-white transition-colors duration-200 transform bg-pink-600 rounded-full hover:bg-pink-700 focus:outline-none focus:bg-pink-700 shadow" %>
          </div>
           <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Mot de passe oublié?", new_password_path(resource_name),class:"flex items-center justify-center text-sm hover:underline text-gray-600 hover:text-pink-600" %><br />
              <% end %>
          <p class="px-6 text-sm text-center">Vous n'avez pas de compte? 
            <a href="/products" class="hover:underline text-gray-600 hover:text-pink-600">Abonnez-vous</a>. 
          </p>
        </div>
      </form>
    </section>
<% end %>
<%= content_tag(:div, flash[:error], :id => "flash_error", :class=>"max-w-lg mx-auto flex bg-red-600 rounded-lg p-4 mb-4 text-sm text-red-700") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice", :class=>"max-w-lg mx-auto flex bg-green-600 rounded-lg p-4 mb-4 text-sm text-gray-50") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert",:class=>"max-w-lg mx-auto flex bg-red-600 rounded-lg p-4 mb-4 text-sm text-gray-50") if flash[:alert] %>
