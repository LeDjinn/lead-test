

<%= form_with(model: [@user, word]) do |form| %>
    <section class="w-full max-w-2xl px-6 py-4 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800 mt-12 mb-12">
        <h2 class="text-3xl font-semibold text-center text-gray-800 dark:text-white">Blog - Article</h2>
        <p class="mt-3 text-center text-gray-600 dark:text-gray-400">Éditez/Créez vos articles pour alimenter votre blog</p>
        <% if word.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

            <ul>
              <% word.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="grid grid-cols-1 gap-6 mt-6 sm:grid-cols-2 md:grid-cols-6">
            <%= link_to user_words_path(@user, @word), :class=>"flex flex-col items-center px-4 py-3 text-gray-700 transition-colors duration-200 transform rounded-md dark:text-gray-200 hover:bg-blue-200 dark:hover:bg-blue-500 hover:text-pink-600 cursor-pointer" do%>
           
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M8.445 14.832A1 1 0 0010 14v-2.798l5.445 3.63A1 1 0 0017 14V6a1 1 0 00-1.555-.832L10 8.798V6a1 1 0 00-1.555-.832l-6 4a1 1 0 000 1.664l6 4z" />
                </svg>

                <span class="mt-2 ">Retour</span>
  
            <% end %>

           
            <%= link_to user_words_path(@user), :class=>"flex flex-col items-center px-4 py-3 text-gray-700 transition-colors duration-200 transform rounded-md dark:text-gray-200 hover:bg-blue-200 dark:hover:bg-blue-500 hover:text-pink-600 cursor-pointer" do %>
            
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 " viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                </svg>

                <span class="mt-2 "> Voir</span>
            <% end %>
            
        </div>
        
        <div class="mt-6 ">
            <div class="items-center -mx-2 md:flex">
                <div class="w-full mx-2 field">
                    
                    <%= form.label :titre, :class=>'block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200' %>
                    <%= form.text_field :title, :class=>"block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div>

                <div class="w-full mx-2 mt-4 md:mt-0">
                    <%= form.label :date, :class=>'block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200' %>
                    <%= form.text_field :body, :class=>"block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" %>
                </div>
            </div>

            <div class="w-full mt-4 field">
                <%= form.label :content, :class=>'block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200' %>
                <%= form.rich_text_area :content, :class=>"block w-full h-40 px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40" %>
            </div>

            <div class="field hidden field">
              <%= form.label :user_id %>
              <%= form.hidden_field :user_id, :value => current_user.id %>
            </div>

            <div class="flex justify-center mt-6 field">
              <%= form.submit :Ajouter, :class=>"px-4 py-2 text-white transition-colors duration-200 transform bg-pink-600 rounded-full hover:bg-pink-700 focus:outline-none focus:bg-pink-700 shadow" %>    
            </div>
        </div>
    </section>
<% end %>
