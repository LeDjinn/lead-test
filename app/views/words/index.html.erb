<p id="notice"><%= notice %></p>

<!-- component -->
<section class="antialiased  text-gray-600 h-screen px-4">
      <div class="text-center mb-4">
            <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900 mt-4">Blog - Vos articles</h1>
            <div class="flex mt-6 justify-center">
            <div class="w-16 h-1 rounded-full primary inline-flex"></div>
            </div>
        </div>
    <div class="flex flex-col justify-center mt-8">
        <!-- Table -->
        <div class="w-full max-w-3xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">
            <header class="px-5 py-4 border-b border-gray-100">
                <h2 class="font-semibold text-gray-800">Blog</h2>
            </header>
            <div class="p-2">
                <div class="overflow-x-auto">
                    <table class="table-auto w-full">
                        <thead class="text-xs font-semibold uppercase text-gray-800 bg-gray-200">
                            <tr>   
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Image</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-center">Article</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Text</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-left">Date</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-center">Voir</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-center">Éditer</div>
                                </th>
                                <th class="p-2 whitespace-nowrap">
                                    <div class="font-semibold text-center">Supprimer</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-gray-100">
                          <% @words.each do |word| %>
                            <tr>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 flex-shrink-0 mr-2 sm:mr-3"><img class="rounded-full" src="https://raw.githubusercontent.com/cruip/vuejs-admin-dashboard-template/main/src/images/user-36-05.jpg" width="40" height="40" alt="Alex Shatov"></div>
                                    </div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-center"><%= word.id %></div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-left font-medium primary-hover"><%= word.title %></div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <div class="text-left"><%= word.body %></div>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <%= link_to user_word_path(word.user_id, word), :class=> "flex items-center justify-center hover:text-pink-600" do %>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l2.879-2.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242zM21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                      </svg>
                                    <% end %>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <%= link_to edit_user_word_path(word.user_id, word ) , :class=> "flex items-center justify-center hover:text-pink-600" do %>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    <% end %>
                                </td>
                                <td class="p-2 whitespace-nowrap">
                                    <%= link_to user_word_path(word.user_id, word), method: :delete, data: { confirm: 'Êtes-vous sûrs?' } , :class=> "flex items-center justify-center hover:text-pink-600" do %>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    <% end %>
                                </td>
                          <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%= link_to new_user_word_path(@user) do %>
          <button class="flex flex-inline items-center justify-center mx-auto mt-16 text-white bg-pink-600 border-0 py-2 px-8 focus:outline-none hover:bg-pink-700 rounded-full text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <span class="ml-1">Nouvelle article</span>
          </button>
        <% end %>
    </div>
</section>
